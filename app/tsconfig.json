{
  "compilerOptions": {
    "module": "esnext",
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "noResolve": false,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noLib": false,
    "jsx": "react",
    "allowJs": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "moduleResolution": "node",
    "rootDir": "src",
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strict": true,
    "types": [
      "jest"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*test.tsx"
  ]
}
